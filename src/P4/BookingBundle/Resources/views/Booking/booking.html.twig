{% extends 'P4BookingBundle::layout.html.twig' %}
{% block main %}
    {% for message in app.session.flashbag.get('fullbookeddate') %}
            <div class="flash-notice">
                {{ message }}
            </div>
    {% endfor %}
{% endblock %}
{% block form %}
    <form>
    <div class="well">
       {{ form_start(form, {'method': 'POST'}) }}
       <div class="form-group">
       {{ form_label(form.date, 'Date de réservation', {'label_attr': {'class': 'foo'}}) }}
       {{ form_widget(form.date, {'attr': {'class': 'temporal'}}) }}
       </div>
       
       
       <div class="form-group">
       {{ form_label(form.mail, 'Adresse Mail', {'label_attr': {'class': 'foo'}}) }}
       {{ form_widget(form.mail, {'attr': {'class': 'foo'}}) }}
       </div>
       
       <div class="form-group">
       {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'foo'}}) }}
       {{ form_widget(form.name, {'attr': {'class': 'foo'}}) }}
       </div>
       
       <div class="form-group">
       {{ form_label(form.surname, 'Prénom', {'label_attr': {'class': 'foo'}}) }}
       {{ form_widget(form.surname, {'attr': {'class': 'foo'}}) }}
       </div>
       
       <div class="form-group">
       {{ form_label(form.birth, 'Date de naissance', {'label_attr': {'class': 'foo'}}) }}
       {{ form_widget(form.birth, {'attr': {'class': 'foo'}}) }}
       </div>
       
       <div class="form-group">
       {{ form_label(form.country, 'Pays', {'label_attr': {'class': 'foo'}}) }}
       {{ form_widget(form.country, {'attr': {'class': 'foo'}}) }}
       </div>
          
       
       <div class="form-group">
            {{form(form.ticket)}}
            <a href="#" id="add_ticket" class="btn btn-default">Ajouter un Ticket</a><br>
       </div>
       
       
       {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}
       {{ form_end(form) }}
       
    </div>
    </form>

{% endblock %}
{% block script %}
    <script src='../public/js/booking.js'></script>
{% endblock %}