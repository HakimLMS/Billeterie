{% extends 'base.html.twig' %}

{% block body %}
    <h1>Book</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if book.date %}{{ book.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ book.mail }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ book.surname }}</td>
            </tr>
            <tr>
                <th>Birth</th>
                <td>{% if book.birth %}{{ book.birth|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ book.country }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('books_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('books_edit', { 'id': book.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
